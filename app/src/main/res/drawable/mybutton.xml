<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#2b804a" />
            <gradient android:angle="-90" android:startColor="#2b804a" android:endColor="#2b804a"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#1ED761" />
            <solid android:color="#1ED761"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#1ED761" />
            <gradient android:angle="-90" android:startColor="#1ED761" android:endColor="#1ED761" />
        </shape>
    </item>
</selector>